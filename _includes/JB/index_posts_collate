{% comment %}<!--
Collate_posts helper. Collated posts by year and month.
Usage:
  1) assign the 'index_posts_collate' variable to a valid array of posts.
  2) include JB/index_posts_collate
  example:
    {% assign index_posts_collate = site.posts %}
    {% include JB/index_posts_collate %}

  Ordering:
    Posts are displayed in reverse chronological order.
    For normal chronological order:
      1) Change the for loop to this:
        => 'for post in site.posts reversed'
      2) Next make sure to change 'post.previous.date' to:
        => 'post.next.date'
        
-->{% endcomment %}

{% if site.JB.index_posts_collate.provider == "custom" %}
  {% include custom/index_posts_collate %}
{% else %}
  {% for post in index_posts_collate limit:5 offset:0 %}
    {% capture this_year %}{{ post.date | date: "%Y" }}{% endcapture %}
    {% capture this_month %}{{ post.date | date: "%B" }}{% endcapture %}
    {% capture next_year %}{{ post.previous.date | date: "%Y" }}{% endcapture %}
    {% capture next_month %}{{ post.previous.date | date: "%B" }}{% endcapture %}

    <li><span>{{ post.date | date: "%B %e, %Y" }}</span> &raquo; <a href="{{ BASE_PATH }}{{ post.url }}">{{ post.title }}</a></li>

  {% endfor %}
{% endif %}
{% assign index_posts_collate = nil %}